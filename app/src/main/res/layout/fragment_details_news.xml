<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/spacing_3">

    <TextView
        android:id="@+id/title"
        style="@style/NewsDetailsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_details_image_height"
        android:layout_marginTop="@dimen/spacing_2"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/description"
        style="@style/NewsDetailsDescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_2"
        android:gravity="top"
        android:layout_marginBottom="@dimen/spacing_2"
        app:layout_constraintBottom_toTopOf="@+id/url"
        app:layout_constraintTop_toBottomOf="@+id/image" />

    <TextView
        android:id="@+id/url"
        style="@style/NewsDetailsUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/news_details_go_to_full_news"/>

</androidx.constraintlayout.widget.ConstraintLayout>